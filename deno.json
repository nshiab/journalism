{
  "name": "@nshiab/journalism",
  "version": "2.0.2",
  "exports": {
    ".": "./src/index.ts",
    "./web": "./src/web.ts"
  },
  "tasks": {
    "all-tests": "deno install && deno fmt --check && deno lint && deno check src/index.ts && deno doc --lint src/index.ts && deno publish --allow-dirty --dry-run && deno task llm",
    "llm": "deno doc --json src/index.ts > docs.json && deno run -A src/generateLlmMd.ts && deno fmt llm.md",
    "patch": "deno task all-tests && deno run -A src/incrementVersion.ts patch",
    "minor": "deno task all-tests && deno run -A src/incrementVersion.ts minor",
    "major": "deno task all-tests && deno run -A src/incrementVersion.ts major"
  },
  "publish": {
    "exclude": [
      ".github"
    ]
  },
  "nodeModulesDir": "auto",
  "imports": {
    "@nshiab/journalism-ai": "jsr:@nshiab/journalism-ai@^1.0.0",
    "@nshiab/journalism-climate": "jsr:@nshiab/journalism-climate@^1.0.3",
    "@nshiab/journalism-dataviz": "jsr:@nshiab/journalism-dataviz@^1.0.1",
    "@nshiab/journalism-extras": "jsr:@nshiab/journalism-extras@^1.0.1",
    "@nshiab/journalism-finance": "jsr:@nshiab/journalism-finance@^1.0.1",
    "@nshiab/journalism-format": "jsr:@nshiab/journalism-format@^1.0.2",
    "@nshiab/journalism-geo": "jsr:@nshiab/journalism-geo@^1.0.2",
    "@nshiab/journalism-google": "jsr:@nshiab/journalism-google@^1.0.0",
    "@nshiab/journalism-statistics": "jsr:@nshiab/journalism-statistics@^1.0.1",
    "@nshiab/journalism-web": "jsr:@nshiab/journalism-web@^1.0.1",
    "@nshiab/journalism-web-scraping": "jsr:@nshiab/journalism-web-scraping@^1.0.1"
  },
  "compilerOptions": {
    "lib": [
      "dom",
      "deno.ns"
    ]
  },
  "lint": {
    "include": [
      "src/**/*.ts"
    ]
  },
  "allowScripts": [
    "npm:playwright-chromium@1"
  ]
}
